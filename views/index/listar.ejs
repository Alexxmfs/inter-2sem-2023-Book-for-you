<div class="fundinho">
<div>
    <p>Total de Livros: ( <%= livros.length %> )</p>
</div>

<div class="container-listar">  
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                
            </div>

            <div>
                <dotlottie-player src="https://lottie.host/75415d5a-eb92-45e0-85de-3aa0e9b90d91/ue4KyYMhbk.json" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay></dotlottie-player>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <% for (let contador = 0; contador < livros.length; contador++) { %>
                <div class="col-md-4 col-sm-4">
                <a class="hover-card" href="/livro/livroDetalhe?idLivro=<%= livros[contador].idLivro %>">
                    <div class="card-livro">
                        <div>
                            <img class="card-img-top embed-responsive-item card-img-livro" src="/public/img/livros/<%= livros[contador].idLivro %>.jpg" alt="Card image cap">
                        </div>
                        <h4><%= livros[contador].titulo %></h4>
                        <h6 class="autor-text-card"><%= livros[contador].autor %></h6>
                    </div>
                </a> 
                </div>
        <% } %>
    </div>
</div>

</div>
