<div class="container-fluid card-livro-padding">
    <div class="row justify-content-center">
        <% for (let contador = 0; contador < livros.length; contador++) { %>
            <div class="col-md-4 custom-card-spacing">
                <a class="hover-card" href="/livro/livroDetalhe?idLivro=<%= livros[contador].idLivro %>">
                    <div class="card-livro">
                        <div>
                            <img class="card-img-top embed-responsive-item card-img-livro" src="/public/img/livros/<%= livros[contador].idLivro %>.jpg" alt="Card image cap">
                        </div>
                        <h4><%= livros[contador].titulo %></h4>
                        <h6 class="autor-text-card"><%= livros[contador].autor %></h6>
                    </div>
                </a> 
            </div>
        <% } %>
    </div>
</div>